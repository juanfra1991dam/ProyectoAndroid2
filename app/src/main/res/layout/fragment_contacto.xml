<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Encabezado con el logotipo -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

            <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_motogp"
                    android:layout_marginBottom="8dp"/>

            <TextView
                    android:id="@+id/tvNombreEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/formulario_de_contacto"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
        </LinearLayout>

        <!-- Información de contacto -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp">

            <!-- Teléfono -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <ImageView
                        android:id="@+id/phoneImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"/>

                <EditText
                        android:id="@+id/etTelefono"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/contacto_telefono"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:focusable="false"/>
            </LinearLayout>

            <!-- Correo -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <ImageView
                        android:id="@+id/emailImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"/>

                <EditText
                        android:id="@+id/etCorreo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/contacto_correo"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:focusable="false"/>
            </LinearLayout>

            <!-- Dirección -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <ImageView
                        android:id="@+id/locationImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"/>

                <EditText
                        android:id="@+id/etUbicacion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/contacto_direccion"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:focusable="false"/>
            </LinearLayout>

            <!-- WhatsApp -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <ImageView
                        android:id="@+id/whatsappImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chat"/>

                <EditText
                        android:id="@+id/etWhatsapp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/contacto_whatsapp"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:focusable="false"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Imagen del mapa -->
        <ImageView
                android:id="@+id/mapImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/maps"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"/>
    </LinearLayout>

</ScrollView>
